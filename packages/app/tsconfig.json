{
  "compilerOptions": {
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "compiled",
    "rootDir": "./",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "skipLibCheck": true,
    "types": ["bun-types"],
    "lib": ["ES2021", "DOM"],
    "paths": {
      "@auto/*": ["src/automation/*"],
      "@backend/*": ["src/backend/*"],
      "@common/*": ["src/common/*"],
      "@front/*": ["src/frontend/*"]
    }
  },
  "include": ["src/**/*", "packages/app/node_modules/@pencil.js/spritesheet/src"],
  "ts-node": {
    // It is faster to skip typechecking.
    "transpileOnly": true,
  }
}