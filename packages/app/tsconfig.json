{
  "compilerOptions": {
    "module": "CommonJS",
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "lib": ["ES2021", "dom"],
    "paths": {
      "@auto/*": ["src/automation/*"],
      "@backend/*": ["src/backend/*"],
      "@common/*": ["src/common/*"],
      "@front/*": ["src/frontend/*"]
    }
  },
  "include": ["**/*"]
}